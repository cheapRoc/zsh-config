TERM=xterm-256color

platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
  platform='linux'
elif [[ "$unamestr" == 'FreeBSD' ]]; then
  platform='freebsd'
elif [[ "$unamestr" == 'Darwin' ]]; then
  platform='osx'
fi

if [ -d "/Applications/Emacs.app" ]; then
  EPATH="/Applications/Emacs.app/Contents/MacOS/bin"
elif [ -d "/Users/$(whoami)/Applications/Emacs.app" ]; then
  EPATH="/Users/$(whoami)/Applications/Emacs.app/Contents/MacOS/bin"
fi

FULLNAME="Justin Reagor"
EMAIL="justinwr@gmail.com"
SHELL="/bin/zsh"

HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=${HISTSIZE}

CDPATH="/Users/$(whoami)"
MANPATH="/usr/local/man:/opt/local/man:$MANPATH"

NODE_BIN="/usr/local/share/npm/bin"
NODE_PATH="/usr/local/lib/node:/usr/local/lib/node_modules"
PATH="~/bin:/opt/local/bin:$NODE_BIN:$EPATH:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:$PATH"

EDITOR="$EPATH/emacsclient"
SVN_EDITOR="$EPATH/emacsclient"

IRBRC="/Users/$(whoami)/.irbrc"

CVS_RSH="ssh"
GIT_AUTHOR_DATE="YYYY-MM-DD-HH:MM"
RDOCOPT="-T hanna -S"

__CF_USER_TEXT_ENCODING=0x1F5:0x8000100:0x8000100

export WORDCHARS="*?~=&;!#$%^_-."
export ZSH_CACHE=~/.zsh/.cache

export JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Home"
export CLASSPATH=$CLASSPATH:/usr/local/Cellar/clojure-contrib/1.2.0/clojure-contrib.jar

export JAVA_OPTS="-d32" # because booting JRuby is like explaining NASA to a cave man

ZSH=$HOME/.oh-my-zsh
ZSH_THEME="eastwood"
DISABLE_AUTO_UPDATE="true"
DISABLE_LS_COLORS="true"
DISABLE_AUTO_TITLE="true"

if [[ -x "/usr/local/lib/node" ]]; then
    export NODE_PATH="/usr/local/lib/node"
fi

ERLANGPATH="`brewpath erlang`"
