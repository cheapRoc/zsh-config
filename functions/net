# -*-shell-script-*-

rand_macaddr() {
  openssl rand -hex 6 | sed 's/\(..\)/\1:/g; s/.$//'
}

macaddr() {
  ifconfig $1 | grep ether | sed -e "s/\\(\\([a-f0-9]\\{2\\}\\):\\)\\{5\\}/\1/"
}

new_macaddr() {
  macaddr
  sudo ifconfig $1 ether "$(rand_macaddr)"
  ifconfig en0
}

clear_dnscache() {
  echo "Resettings DNS cache..."
  sudo killall -HUP mDNSResponder
}

ipaddr() {
  print ${${$(ifconfig en0)[14]}:gs/\://}
}
